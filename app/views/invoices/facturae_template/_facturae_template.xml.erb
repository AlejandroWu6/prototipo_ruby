<?xml version="1.0" encoding="UTF-8"?>
<facturae:Facturae xmlns:facturae="http://www.facturae.es/Facturae/2009/v3.2/Facturae">
  <FileHeader>
    <SchemaVersion>3.2</SchemaVersion>
    <Modality>I</Modality>
    <InvoiceIssuerType>TE</InvoiceIssuerType>
    <Batch>
      <BatchIdentifier><%= invoice.number %></BatchIdentifier>
      <InvoicesCount>1</InvoicesCount>
      <TotalInvoicesAmount>
        <TotalAmount><%= invoice.total %></TotalAmount>
      </TotalInvoicesAmount>
      <TotalOutstandingAmount>
        <TotalAmount><%= invoice.total %></TotalAmount>
      </TotalOutstandingAmount>
      <TotalExecutableAmount>
        <TotalAmount><%= invoice.total %></TotalAmount>
      </TotalExecutableAmount>
      <InvoiceCurrencyCode><%= invoice.currency %></InvoiceCurrencyCode>
    </Batch>
  </FileHeader>

  <Invoices>
    <Invoice>
      <InvoiceHeader>
        <InvoiceNumber><%= invoice.number %></InvoiceNumber>
        <InvoiceDocumentType>FC</InvoiceDocumentType>
        <InvoiceClass>OO</InvoiceClass>
      </InvoiceHeader>
      <InvoiceIssueData>
        <IssueDate><%= invoice.date.strftime('%Y-%m-%d') %></IssueDate>
        <InvoiceCurrencyCode><%= invoice.currency %></InvoiceCurrencyCode>
        <LanguageName>es</LanguageName>
      </InvoiceIssueData>
      <InvoiceTotals>
        <TotalGrossAmount><%= invoice.subtotal %></TotalGrossAmount>
        <TotalTaxOutputs><%= invoice.tax_total %></TotalTaxOutputs>
        <InvoiceTotal><%= invoice.total %></InvoiceTotal>
      </InvoiceTotals>
    </Invoice>
  </Invoices>
</facturae:Facturae>
