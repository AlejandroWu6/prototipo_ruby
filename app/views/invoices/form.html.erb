<h1>Create Invoice in <%= @invoice.format.upcase %> Format</h1>

<%= form_with model: @invoice, url: invoices_path do |form| %>
  <% if @invoice.errors.any? %>
    <div class="alert alert-danger">
      <% @invoice.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <!-- Common fields -->
  <div class="mb-3">
    <%= form.label :client_name %>
    <%= form.text_field :client_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :date %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <!-- Format-specific fields -->
  <%= render "invoices/form_fields/#{@invoice.format}_fields", f: form %>

 
<% end %>
