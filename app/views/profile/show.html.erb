<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Profile</h1>
  
</div>
    <%= form_with model: @user, url: profile_path, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :current_password, class: "form-label" %>
        <%= form.password_field :current_password, class: "form-control", placeholder: "Enter your current password" %>
      </div>
      <div class="mb-3">
        <%= form.label :new_password, class: "form-label" %>
        <%= form.password_field :new_password, class: "form-control", placeholder: "Enter your new password" %>
      </div>
      <div class="mb-3">
        <%= form.label :new_password_confirmation, class: "form-label" %>
        <%= form.password_field :new_password_confirmation, class: "form-control", placeholder: "Confirm your new password" %>
      </div>
      <div class="d-flex justify-content-between">
        <%= form.submit "Update Profile", class: "btn btn-primary" %>
        <div class="d-flex">
          <%= link_to "Logout", logout_path, data: { turbo_method: :delete, confirm: "¿Quieres cerrar sesión?" }, class: "btn btn-outline-secondary me-2" %>
          <%= button_to "Eliminar usuario", delete_user_path, method: :delete, data: { confirm: "¿Estás seguro de que quieres eliminar tu cuenta?" }, class: "btn btn-danger" %>
        </div>
      </div>
<% end %>